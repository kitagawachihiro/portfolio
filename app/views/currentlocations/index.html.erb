<%= stylesheet_link_tag 'title', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= stylesheet_link_tag 'index', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= stylesheet_link_tag 'currentlocation/index', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="title">
  <h1><%= title t ('.title') %></h1>
  <div class="pagenate">
    <%= paginate @spots, theme: 'twitter-bootstrap-4' %>
  </div>
  
  <div class='search_form'>
    <%= search_form_for @q, url: currentlocations_path do |f| %>
      <%= f.search_field :name_cont, placeholder:"場所", class:'form' %>
      <%= f.submit class:'search_btn' %>
    <% end %>
  </div>

</div>

<% if @spots.empty? %>
  <%= render 'none' %>
<% else %>



  <% @spots.each do |spot| %>
    <div class="col-lg-4">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= spot.name %></h5>
        </div>

        <ul class="list-group">
          <% spot.todos.each do |todo| %>
            <% if current_user.todos.include?(todo)%>
              <li class="list-group-item">
                <div class="item-check">
                  <%= render 'checks/check', todo: todo  %>
                </div>
                <div class="item-content">
                  <%= todo.content %>
                </div>
                <div class="item-right">
                  <%= render 'todos/btn', todo: todo  %>
                </div>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

<% end %>