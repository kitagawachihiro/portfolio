<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t '.title' %></h1>
      <%= form_with model: @todo, url: admin_todo_path(@todo), local: true do |f| %>
        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_field :content, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :finished %>
          <%= f.check_box :finished, value: @todo.finished, class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= f.label :public %>
          <%= f.check_box :public, value: @todo.public, class: 'form-control'%>
        </div>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
