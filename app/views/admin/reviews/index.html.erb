<div class="container mb-5 pt-2">
  <h1>Review一覧</h1>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col">id</th>
          <th scope="col">todo_id</th>
          <th scope="col">rating</th>
          <th scope="col">comment</th>
          <th scope="col">created_at</th>
          <th scope="col">updated_at</th>
        </tr>
        </thead>
        <tbody>
        <%= render @reviews %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <!-- ページネーション -->
      <%= paginate @reviews %>
    </div>
  </div>
</div>