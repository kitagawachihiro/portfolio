<div class="title">
    <h1>設定</h1>
</div>

<div class="container-mid">   
<%= form_with url: usersetting_path, local: true do |f| %>
  <%= f.label :distance, "何をしたい？" %><
  <%= f.text_field :content,value: @todo.content, placeholder:"TVで見た幻のプリンを食べる", id:"todo_content" %>
  <%= f.submit "更新", class:"submit_btn" %>
<% end %>
</div>


<style>
.title{
  position: relative;
  height: 100px;
  max-width:100vw;
    }

h1{
  position: absolute; 
  display: inline-block; 
  bottom: 0;
}


.submit_btn{
    display: block;
    border-radius: 100vh;
    margin: 0 auto;
    height: 7vh;
    width: 20vh;
    background-color: #F2C67F;
    border:none;
    color: white;
    font-size: 16px;
}

</style>
