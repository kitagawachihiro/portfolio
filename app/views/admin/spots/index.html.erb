<div class="container mb-5 pt-2">
  <h1>Spot一覧</h1>
  <div class="row">
    <div class="col-md-12 mb-3">
      <%= render 'search_form' %>
    </div>
  </div>  
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col">id</th>
          <th scope="col">name</th>
          <th scope="col">address</th>
          <th scope="col">latitude</th>
          <th scope="col">longitude</th>
          <th scope="col">created_at</th>
          <th scope="col">updated_at</th>
          <th scope="col">紐付け数</th>
        </tr>
        </thead>
        <tbody>
        <%= render @spots %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <!-- ページネーション -->
      <%= paginate @spots %>
    </div>
  </div>
</div>