
<div class="title">
  <h1>All</h1>
  <%= link_to 'Add Todo', new_todo_path, class: "btn btn-primary" %>
</div>

<% @spots.each do |spot| %>
  <div class="col-sm-4">
    <div class="card mb-3" style="width:36rem;">
      <div class="card-body">
        <h5 class="card-title"><%= spot.name %></h5>
      </div>

      <ul class="list-group">
        <% spot.todos.each do |todo| %>
          <li class="list-group-item">
            <div class="item-check">
              <%= render 'checks/check', todo: todo  %>
            </div>
            <div class="item-content">
              <%= todo.content %>
            </div>
            <div class="item-right">
              <%= render 'todos/btn', todo: todo  %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<style>
  .card {
    border-radius: 10px;
    padding: 10px;
    margin-bottom :20px;
    margin-right :10px;
}

  .card-title{
    border-radius: 10px;
    background-color :#D4DEDD;
    padding: 16px;
  }

  .list-group-item{
    border: none;
    display:flex;
}

.title{
  position: relative;
  height: 10vh;
  width:100vh;
}
h1,.btn{
  position: absolute; 
  display: inline-block; 
  bottom: 0;
}

.btn{
  margin-left:8vh;
  margin-bottom:1.5vh;
  display: inline-block;
  border-radius: 100vh;
  height: 3.5vh;
  width: 12vh;
  background-color: #F2C67F;
  border:none;
  color: white;
  font-size: 16px;

}

.btn:hover{
    background-color: #FCEACE;
    color: #F2C67F;
}

i{
  margin-right:1vh;
  color:#D4DEDD;
}

a:hover {
text-decoration: none;
}

.item-content{
  width:70%;
  word-break: break-all;
}
.item-right{
  width:20%;
}
</style>